<body>

    .card.my-5.container
        .h3 Controls
        .card-body
            ul.list-group.my-3
                //li.list-group-item
                .row 
                    .col.d-flex.justify-content-center
                        button#bt_forward.m-5.btn.btn-lg.btn-primary(type='button' style='scale:3') Forward
                //li.list-group-item
                .row
                    .col.d-flex.justify-content-center
                        button#bt_left.m-5.btn.btn-lg.btn-primary(type='button' style='scale:3') Left 
                    .col.d-flex.justify-content-center
                        button#bt_right.m-5.btn.btn-lg.btn-primary(type='button' style='scale:3') Right
                //li.list-group-item
                .row 
                    .col.d-flex.justify-content-center
                        button#bt_backward.m-5.btn.btn-lg.btn-primary(type='button' style='scale:3') Backward


    .card.my-3.container
        .h3 Settings
        .card-body
            ul.list-group.my-3 
                li.list-group-item
                    label#step_run_range_label.form-label(for='step_run_range')  step_run
                    input#step_run_range.form-range(type='range' min='0' max='10000' step='100')

                li.list-group-item
                    label#step_rotate_range_label.form-label(for='step_rotate_range')  step_rotate
                    input#step_rotate_range.form-range(type='range' min='0' max='180' step='10')

                li.list-group-item
                    label#speed_range_label.form-label(for='speed_range') speed
                    input#speed_range.form-range(type='range' min='0' max='5' step='0.1')

                li.list-group-item
                    label#accel_G_range_label.form-label(for='accel_G_range') accel_G
                    input#accel_G_range.form-range(type='range' min='0' max='100' step='5')

                li.list-group-item
                    label#accel_B_range_label.form-label(for='accel_B_range') accel_B
                    input#accel_B_range.form-range(type='range' min='0' max='5' step='0.1')

